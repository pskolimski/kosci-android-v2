<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="GRA W KOŚCI"
        android:textSize="26dp"
        android:layout_marginBottom="30dp"
       />
   <LinearLayout
       android:layout_width="match_parent"
       android:gravity="center"
       android:orientation="horizontal"
       android:layout_marginBottom="30dp"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/nick"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="left"
           android:layout_marginRight="15dp"
           android:textSize="18dp"
           android:text="Nick w grze"
           />

       <TextView
           android:id="@+id/rollsLeft"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:layout_marginLeft="15dp"
           android:text="Pozostało rzutów: 5"
           />

   </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/diceImage1"
            android:src="@drawable/question"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />
        <ImageView
            android:id="@+id/diceImage2"
            android:src="@drawable/question"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />
        <ImageView
            android:id="@+id/diceImage3"
            android:src="@drawable/question"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />
        <ImageView
            android:id="@+id/diceImage4"
            android:src="@drawable/question"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />
        <ImageView
            android:id="@+id/diceImage5"
            android:src="@drawable/question"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/randomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Losuj"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/points"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/totalPoints"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz wynik"
        android:id="@+id/saveButton"
        android:layout_marginTop="30dp"
        />
</LinearLayout>